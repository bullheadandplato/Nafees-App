<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <SwitchPreferenceCompat
            android:summary="@string/summary_notification"
            app:key="notification"
            app:defaultValue="true"
            app:icon="@drawable/ic_baseline_notifications_24"
            app:title="@string/video_notifications" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/misc">

        <Preference
            app:key="licences"
            app:icon="@drawable/ic_baseline_public_24"
            app:summary="@string/open_source_summary"
            app:title="@string/open_source_title" />

        <Preference
            app:icon="@drawable/ic_baseline_code_24"
            app:key="code"
            app:summary="@string/code_summary"
            app:title="@string/code_title" />

        <Preference
            app:key="about"
            app:summary="@string/about_summary"
            app:title="@string/about_title" />

    </PreferenceCategory>

</PreferenceScreen>